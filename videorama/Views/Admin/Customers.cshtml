@model IEnumerable<Videorama.Models.Customer>
@using System.Security.Claims

@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string userName = "";
    string role = "";
    string id = "";
    int idUser = 0;
    bool roleAdmin = false;

    if (Request.IsAuthenticated)
    {
        var claimIdentity = User.Identity as ClaimsIdentity;

        if (claimIdentity != null)
        {
            userName = claimIdentity.FindFirst(ClaimTypes.Name).Value;
            role = claimIdentity.FindFirst(ClaimTypes.Role).Value;
            id = claimIdentity.FindFirst(ClaimTypes.NameIdentifier).Value;
            idUser = Convert.ToInt32(id);
            roleAdmin = Convert.ToBoolean(role);
        }
    }
}
@if (Request.IsAuthenticated)
{
    if (roleAdmin)
    {
        <h2>Registre des clients</h2>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Town)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Town)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.ActionLink("Locations", "Rents", "Rents", new { id = item.IdUser }, null) |
                        @Html.ActionLink("Modifier", "EditCustomer", new { id = item.IdUser }) |
                        @Html.ActionLink("Supprimer", "DeleteCustomer", new { id = item.IdUser })
                    </td>
                </tr>
            }

        </table>
    }
}