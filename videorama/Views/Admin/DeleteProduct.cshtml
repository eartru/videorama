@model Tuple<Videorama.Models.Product, List<Videorama.Models.Person>>

@{
    ViewBag.Title = "Supprimer un produit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Supprimer produit</h3>
<hr />
<h3>Etes-vous sûr de vouloir supprimer ce produit?</h3>
<div>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Synopsis)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Synopsis)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Stock)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Stock)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Price)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour à la gestion des stocks", "Stock")
        </div>
    }
</div>
