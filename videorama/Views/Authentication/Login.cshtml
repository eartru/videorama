@{

    Layout = "~/Views/Shared/_LayoutAuthentication.cshtml";
    ViewBag.Title = "Login";
}

<h2>Connectez-vous</h2>

<div>
    @using (Html.BeginForm("CheckLogin", "Authentication", FormMethod.Post))
    {
        @Html.Label("UserName")
        @Html.TextBox("UserName", null, new { required = "required" })

        @Html.Label("Password", "Mot de passe")
        @Html.Password("Password", null, new { required = "required" })

        <input class="btn btn-outline-secondary" type="submit" value="OK" />
    }

    <p>Pas encore de compte ? @Html.ActionLink("Inscrivez-vous !", "Register", "Authentication")</p>


</div>

