@model videorama.ViewModels.AuthenticationViewModel
@{

    Layout = "~/Views/Shared/_LayoutAuthentication.cshtml";
    ViewBag.Title = "Login";
}

<div class="col-12">
    <h2>Connectez-vous</h2>

    @using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.User.Username, "Nom d'utilisateur")
            @Html.TextBoxFor(m => m.User.Username, null, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.User.Password, "Mot de passe")
            @Html.PasswordFor(m => m.User.Password, new { @class = "form-control", required = "required" })
        </div>
        <input class="btn btn-primary" type="submit" value="OK" />
    }

    <p>Pas encore de compte ? @Html.ActionLink("Inscrivez-vous !", "Register", "Authentication")</p>


</div>

    

