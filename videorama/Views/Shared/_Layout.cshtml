<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Videorama - @ViewBag.Title</title>
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="nav_bar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <img class="logo" src="~/Content/Images/logo.png"/>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 sidebar-offcanvas" id="sidebar" role="navigation">
                <!-- Sidebar -->
                <div id="sidebar-nav">
                    <ul id="sidebar_second" class="nav">
                        <li class="active">
                            @Html.ActionLink("Liste des films", "ProductsList", "Products", new { type = 1 }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Liste des séries", "ProductsList", "Products", new { type = 2 }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Liste des dessins animés", "ProductsList", "Products", new { type = 3 }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Mes locations", "MyLocation")
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 col-xl-9">
                <br>
                <div class="jumbotron">
                    @RenderBody()
                    <hr />
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>